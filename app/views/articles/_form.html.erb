
<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
<%= form_for @article do |f| %>
<% # need to make instance variable "@article in the controller" %>
  <p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <% #automatically makes a create article button. Need to make an action for this buttoon in Articles Controller however %>
    <% #also learn to comment in HTML instead of making embedded ruby comments idiot! %>
    <% #Submit will return a hash with the text field and text area as contents %>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Back to articles listing", articles_path %>